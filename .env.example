# External API Keys
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_project_secret
ALCHEMY_API_KEY=your_alchemy_api_key
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Push Notification Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_IPFS_GATEWAY=http://localhost:8080/ipfs/
NEXT_PUBLIC_CONTRACT_ADDRESSES={\"jobFactory\":\"0x...\",\"escrow\":\"0x...\"}
NEXT_PUBLIC_SUPPORTED_CHAINS=1,5,137,80001
NEXT_PUBLIC_DEFAULT_CHAIN=5
NEXT_PUBLIC_ANALYTICS_ID=your_google_analytics_id

# Docker Configuration
DOCKER_REGISTRY=your_docker_registry
IMAGE_TAG=latest

# Production Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
SECURE_COOKIES=true
HELMET_CSP=true

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_KEYS=10000

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY_MS=5000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Grafana Configuration
GRAFANA_PASSWORD=admin_password_123

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin_password_123

# Development Tools
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
DEBUG_MODE=false

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=128

# Feature Flags
ENABLE_YIELD_FARMING=true
ENABLE_CROSS_CHAIN=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Testing Configuration
TEST_DB_NAME=freelancing_platform_test
TEST_PRIVATE_KEY=0x...
TEST_CONTRACT_ADDRESSES={}

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Platform is under maintenance. Please try again later."

# API Version
API_VERSION=v1

# Geographic Configuration
DEFAULT_TIMEZONE=UTC
SUPPORTED_LOCALES=en,es,fr,de,zh,ja

# Compliance Configuration
GDPR_COMPLIANCE=true
KYC_PROVIDER=jumio
AML_PROVIDER=chainalysis

# Business Configuration
PLATFORM_FEE_PERCENTAGE=2.5
MIN_JOB_BUDGET=0.01
MAX_JOB_BUDGET=10000
BID_EXPIRY_DAYS=7
DISPUTE_RESOLUTION_DAYS=7

# Emergency Configuration
EMERGENCY_STOP_ENABLED=false
EMERGENCY_CONTACT_EMAIL=emergency@yourdomain.com
EMERGENCY_PHONE=+1-555-0123